{
	"files.exclude": {
		"amplify/.config": true,
		"amplify/**/*-parameters.json": true,
		"amplify/**/amplify.state": true,
		"amplify/**/transform.conf.json": true,
		"amplify/#current-cloud-backend": true,
		"amplify/backend/amplify-meta.json": true,
		"amplify/backend/awscloudformation": true
	},
	"editor.formatOnSave": true,
	"css.validate": false,
	"editor.insertSpaces": true,
	"editor.defaultFormatter": "esbenp.prettier-vscode",
	"editor.codeActionsOnSave": {
		"source.fixAll.eslint": "explicit",
		"source.fixAll.stylelint": "explicit"
	},
	"[json]": {
		"editor.formatOnSave": true
	},
	"javascript.preferences.useAliasesForRenames": false,
	"javascript.updateImportsOnFileMove.enabled": "always",
	"stylelint.validate": ["css", "scss", "typescript"],
	"workbench.colorCustomizations": {
		"activityBar.activeBackground": "#4478d1",
		"activityBar.activeBorder": "#68b4ff",
		"activityBar.background": "#3b52b8",
		"activityBar.foreground": "#88c3ff",
		"activityBar.inactiveForeground": "#6ab1f8",
		"titleBar.activeBackground": "#1e2b63"
	},
	"liveServer.settings.port": 5502
}
